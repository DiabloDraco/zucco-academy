---
export interface Props {
  title: string;
  body: string;
  img: string;
}

const { title, body, img } = Astro.props;
---

<li class="program__item">
  <img
    class="program__item-img"
    src={img}
    width="auto"
    height="auto"
    alt="Программа курса"
    loading="lazy"
    title="icons"
  />
  <h3 class="program__item-title">
    {title}
  </h3>
  <p class="program__item-body">
    {body}
  </p>
</li>

<style>
  .program__item {
    width: 540px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .program__item-img {
    display: flex;
    align-items: center;
    justify-content: center;
    height: calc(15.71429px + 3.34821vw);
    mix-blend-mode: darken;
  }
  .program__item-title {
    max-width: 304px;
    font-size: calc(7px + 0.78125vw);
    line-height: calc(4.28571px + 1.33929vw);
    font-weight: 700;
    color: #303030;
    text-align: center;
    margin-top: calc(2.14286px + 2.23214vw);
    margin-bottom: calc(10.71429px + 0.22321vw);
  }
  .program__item-body {
    font-size: calc(4.14286px + 0.66964vw);
    line-height: calc(0.28571px + 1.33929vw);
    font-family: Inter;
    font-weight: 400;
    color: #646464;
    margin-left: 0;
    margin-right: 0;
    margin-top: calc(-11.42857px + 1.11607vw);
    margin-bottom: calc(10.71429px + 0.22321vw);
    text-align: center;
  }
</style>

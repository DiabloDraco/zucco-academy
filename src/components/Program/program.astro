---
import Card from "../Card.astro";
---

<section class="program">
  <div class="container">
    <div class="program__wrapper">
      <h2 class="program__header">DASTURLASH</h2>
      <ul role="list" class="program__list">
        <Card
          img="/img/programs__img-1.webp"
          title="Veb-sahifani joylashtirish asoslari"
          body="Visual studio ishlab chiqish muhiti, Figma grafik muharriri va HTML va CSS yordamida veb-saytlar yaratish asoslarini o'rganish."
          width="200"
          height="70"
        />
        <Card
          img="/img/programs__img-2.webp"
          title="Dinamik saytlarni yaratish"
          body="Zamonaviy va chinakam interaktiv veb-saytlarni yaratish uchun JavaScript-ning eng moslashuvchan dasturlash tiliga to'liq kirish."
          width="68"
          height="68"
        />
        <Card
          img="/img/programs__img-3.webp"
          title="Professional ishlab chiqish va portfel dizayni"
          body="Kodning to'g'ri tuzilishi - BEM, loyihalarni xavfsiz saqlash va portfellarni Git tizimidan foydalangan holda bulutli xizmatlarga (GitHub) yuklash."
          width="162"
          height="68"
        />
        <Card
          img="/img/programs__img-4.webp"
          title="Har qanday sayt uchun tezkor echimlar"
          body="Vue.js va Vuex progressiv ramkalariga kirish - shtat boshqaruvi namunasi va tezkor javob beruvchi veb-saytlar va veb-ilovalarni yaratish uchun Vue.js ilovalari uchun kutubxona bilan."
          width="162"
          height="68"
        />
        <Card
          img="/img/programs__img-5.webp"
          title="Dasturlashni avtomatlashtirish va optimallashtirish"
          body="Saytning joylashuvi va rivojlanishini soddalashtirish uchun qo'shimcha SASS vositalari."
          width="140"
          height="68.50"
        />
        <Card
          img="/img/programs__img-6.webp"
          title="API o'rganish"
          body="(Application Programming Interface) - ilovalar yaratishda dasturlash jarayoni."
          width="67"
          height="67"
        />
      </ul>
    </div>
  </div>
</section>

<style lang="scss">
  .program {
    padding: 88px 0;

    .program__wrapper {

      .program__header {
        margin: 0 auto;
        text-align: center;
        max-width: 304px;
        font-size: 35px;
        line-height: 22px;
        color: #303030;
        font-weight: 600;
        text-transform: uppercase;
        color: #303030;
        text-align: center;
      }

      .program__list {
        padding-top: 40px;
        justify-content: center;
        gap: 40px;
        display: flex;
        flex-wrap: wrap;
      }
    }
  }
</style>
